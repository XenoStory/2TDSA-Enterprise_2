@model Fiap04.Web.Mvc.Models.Pessoa

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

<div class="container">
    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.LabelFor(pe => pe.Nome)
            @Html.TextBoxFor(pe => pe.Nome, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(pe => pe.Dependentes)
            @Html.TextBoxFor(pe => pe.Dependentes, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(pe => pe.DataNascimento)
            @Html.TextBoxFor(pe => pe.DataNascimento, new { @class = "form-control" })
        </div>

        <input type="submit" value="Salvar" class="btn btn-primary" />
    }
</div>