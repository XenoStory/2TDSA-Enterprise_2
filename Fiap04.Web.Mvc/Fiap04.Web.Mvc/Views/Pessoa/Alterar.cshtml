@model Fiap04.Web.Mvc.Models.Pessoa

@{
    ViewBag.Title = "Alterar";
}

<h2>Alterar</h2>

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(pe => pe.PessoaId)
        <div class="form-group">
            @Html.LabelFor(pe => pe.Nome)
            @Html.TextBoxFor(pe => pe.Nome, new { @class = "form-control"})
        </div>
        <div class="form-group">
            @Html.LabelFor(pe => pe.Dependentes)
            @Html.TextBoxFor(pe => pe.Dependentes, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(pe => pe.DataNascimento)
            @Html.TextBoxFor(pe => pe.DataNascimento,"{0:dd/MM/yyyy}", new { @class = "form-control" })
        </div>

        <input type="submit" value="Salvar" class="btn btn-primary" />
    }
</div>
