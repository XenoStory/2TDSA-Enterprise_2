@model Fiap06.Wev.MVC.Models.Concurso


@{
    ViewBag.Title = "Cadastrar";
}

@Utils.genAlert(TempData["msg"])

<h2>Cadastrar</h2>

<div class="container">
    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.LabelFor(c => c.Data)
            @Html.TextBoxFor(c => c.Data, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Premio)
            @Html.TextBoxFor(c => c.Premio, new { @class = "form-control"})
        </div>
        <div class="form-group">
            @Html.CheckBoxFor(c => c.Acumulado)
            @Html.LabelFor(c => c.Acumulado)
        </div>

        @Utils.genSubmit("Cadastrar");
    }
</div>