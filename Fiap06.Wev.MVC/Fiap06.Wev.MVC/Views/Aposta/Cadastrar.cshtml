@model Fiap06.Wev.MVC.Models.Aposta

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>

@Utils.genAlert(TempData["msg"])

<div class="container">
    <div class="row">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.LabelFor(a => a.Data)
                @Html.TextBoxFor(a => a.Data, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(a => a.Concurso)
                @Html.DropDownListFor(a => a.Numero, ViewBag.list as SelectList, new {
                    @class = "form-control"})
            </div>
            <div class="form-group">
                <h2>Números</h2>
                @for (int i = 1; i < 61; i++)
                {
                    <input type="checkbox" value="@i" name="sequencia" />
                    <label>@i</label>
                }
            </div>

            @Utils.genSubmit("Cadastrar")
        }
    </div>
</div>
