@model Fiap07.Web.MVC.Models.Filme

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>

@Utils.alert(TempData["msg"])

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(f => f.Nome)
        @Html.TextBoxFor(f => f.Nome, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(f => f.Duracao)
        @Html.TextBoxFor(f => f.Duracao, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(f => f.ClassificacaoIndicativa)
        @Html.TextBoxFor(f => f.ClassificacaoIndicativa, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(f => f.Categoria)
        @Html.DropDownListFor(f => f.Categoria,
            ViewBag.selectList as SelectList,
                "Selecione", new { @class = "form-control"})
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-primary" />
}

