
@{
    ViewBag.Title = "Login";
}

@if (TempData["message"] != null)
{
    <div style="margin-top: 25px" class="alert alert-danger">
        @TempData["message"]
    </div>
}
<div class="container">
    <h2>Entre com seus dados </h2>
    <form action="/Home/Login" method="post">
        <div class="form-group">
            <label for="id-login">Login</label>
            <input class="form-control" type="text" name="username" id="id-login" placeholder="Nome de usuário" />
        </div>
        <div class="form-group">
            <label for="id-senha">Senha </label>
            <input class="form-control" type="password" name="password" id="id-senha" placeholder="Senha" />
        </div>
        <input type="submit" class="btn btn-primary" value="Entrar" />
    </form>
</div>

